<div class="ui segment">
    <div class="ui two column stackable grid">
        <div class="ten wide column">
            <h2 class="header">
                {{ 'domains_list' | trans([], pluginTranslationDomain, defaultLocale.code) }}
            </h2>
        </div>
        <div class="six wide column">
            <div class="ui green inverted button tiny" style="float: right;"
                 onclick="SyliusTranslationPlugin.addDomain(jQuery('#addDomainModal'));">
                <i class="add icon"></i>
                {{ 'add_domain' | trans([], pluginTranslationDomain, defaultLocale.code) }}
            </div>
        </div>
    </div>
    <div class="ui middle aligned list">
        {% for domain in localeMessageCatalogue.getDomains() %}
            {% set totalMessagesCount = fullMessageCatalogue.all(domain) | length %}
            {% set translatedMessagesCount = localeMessageCatalogue.all(domain) | length %}
            {% set untranslatedMessagesCount = totalMessagesCount - translatedMessagesCount %}
            {% set domainTranslationProgress = (translatedMessagesCount / totalMessagesCount) * 100 %}
            <div class="item">
                <i class="icon folder{% if selectedDomain is same as(domain) %} open teal{% endif %}"></i>
                <div class="content">
                    <div class="header">
                        <a href="{{ path('yaroslavche_sylius_translation_plugin_locale', {'localeCode': currentLocale.code, 'domain': domain}) }}">{{ domain }}</a>
                    </div>
                    <div class="description">Total: {{ totalMessagesCount }},
                        Translated: {{ translatedMessagesCount }} ({{ '%.2f' | format(domainTranslationProgress) }}%)</div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
<div class="ui basic modal" id="addDomainModal" data-locale-code="{{ currentLocale.code }}">
    <div class="ui icon header">
        <i class="archive icon"></i>
        Add new domain for "{{ currentLocale.name|trans([], null, defaultLocale.code) }}" locale
    </div>
    <div class="content">
        <div class="ui center aligned grid">
            <div class="sixteen wide column">
                <div class="ui labeled inverted input">
                    <div class="ui label">
                        {{ 'domain' | trans([], pluginTranslationDomain, currentLocale.code) }}
                    </div>
                    <input placeholder="domain" id="addDomainModal_domainInput" type="text">
                </div>
            </div>
        </div>
    </div>
    <div class="actions">
        <div class="ui red basic cancel inverted button">
            <i class="remove icon"></i>
            Cancel
        </div>
        <div class="ui green ok inverted button">
            <i class="checkmark icon"></i>
            Apply
        </div>
    </div>
</div>